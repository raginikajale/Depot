<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table cellpadding="5" cellspacing="0">
  <tbody>
    <%  
      odd_or_even = 0
      @products.each do |product| 
      odd_or_even = 1 - odd_or_even
    %>
      <tr valign="top" class="ListLine<%= odd_or_even %>">
        <td>
          <img width="60" height="70" src="<%= product.image_url %>"/>
        </td>
        <td width="60%">
          <span class="ListTitle"><%= h(product.title) %></span><br />
          <%= truncate(product.description, :length => 80) %>
        </td>
        <td align="right">
          <%= product.date_availability.strftime("%y-%m-%d") %><br/>
          <strong>$<%= sprintf("%0.2f", product.price.to_f) %></strong>
        </td>
        <td class="ListActions">
          <%= link_to 'Show' , :action => 'show' , :id => product.id %><br/>
          <%= link_to 'Edit' , :action => 'edit' , :id => product.id %><br/>
          <%= link_to 'Destroy' , { :action => 'destroy' , :id => product.id },:confirm => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

